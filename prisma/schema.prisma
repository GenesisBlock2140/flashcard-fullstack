datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Flashcard {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  textRecto String
  textVerso String
  deckId String @db.ObjectId
  initialDeck Deck @relation(fields: [deckId], references: [id])
}

model Deck {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  theme String
  isPublic Boolean @default(false)
  flashcards Flashcard[]
  deckAuthor User @relation(fields: [id], references: [id])
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
  deckList Deck[]
}
